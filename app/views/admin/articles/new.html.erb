<%= link_to 'Back', admin_articles_path('category' => params[:category]) %>
<%= form_for @article, url: admin_articles_path, html: { method: :post } do |f| %>
  <div class="modal-body">
    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    <div class="field">
      <%= f.label :headline %><br />
      <%= f.text_field :headline, autofocus: true, :required => true %>
    </div>
    <div class="field">
      <%= f.label :alt_text %><br />
      <%= f.text_field :alt_text, :required => true %>
    </div>
    <div class="field">
      <%= f.label :caption %><br />
      <%= f.text_field :caption, :required => true %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.rich_text_area :content, :required => true %>
    </div>
    <div class="field">
      <%= f.label 'Location' %><br />
      <%= f.select :location_id, options_from_collection_for_select(@locations, :id, :name) %>
    </div>
    <div class="field">
      <%= f.hidden_field :category_id, value: params[:category]  %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
    <%= submit_tag 'Add', :class=>'btn btn-primary' %>
  </div>
<% end %>
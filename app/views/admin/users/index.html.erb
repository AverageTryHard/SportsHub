<div class="table_block">
  <table class="table table-striped users_table">
    <tr>
      <td>Name</td>
      <td>Status</td>
      <td>Actions</td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.status %></td>
        <td>
          <%= link_to "Block", admin_user_change_user_status_path(user, user_status: 'blocked'), method: :post %>
          <%= link_to "Destroy", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<div>
  <ul id='user_tabs' class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="description-tab" role="tab" href="#description" aria-controls="description" aria-selected="true">General info</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="teams-tab" role="tab" href="#teams" aria-controls="teams" aria-selected="false" >Teams</a>
    </li>
  </ul>
  <div class="tab-content" id="user_tabs_content">
    <div class="tab-pane fade show active" aria-labelledby="description-tab" id="description" role="tabpanel">
      Описание
    </div>
    <div class="tab-pane fade" aria-labelledby="teams-tab" id="teams" role="tabpanel">
      Команды
    </div>
  </div>
</div>

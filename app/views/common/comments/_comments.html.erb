<h3>Comments</h3>
<% commentable.comments.each do |comment| %>
  <div class="border-bottom border-dark w-50">
    <div class="row">
      <div class="col-auto"><p>User name: <%= comment.user.full_name %></div>
      <% if current_user == comment.user %>
        <div class="col-1"><%= link_to 'Delete', article_comment_path(comment.commentable_id, comment),
                                       :method => :delete %></div>
      <% end %>
    </div>
    <p>
    </p>
    <%= comment.body %>
  </div><br>
<% end %>